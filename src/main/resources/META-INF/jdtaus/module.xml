<jdtaus:module xmlns="http://jdtaus.org/runtime/container/xml"
               xmlns:jdtaus="http://jdtaus.org/runtime/container/xml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://jdtaus.org/runtime/container/xml http://sites.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-client-container/jdtaus-module.xsd"
               jdtaus:name="${pom.name}"
               jdtaus:description="${pom.description}"
               jdtaus:version="1.0">

  <jdtaus:implementations>
    <!--                                                                     -->
    <!-- PropertyCurrencyDirectory                                           -->
    <!--                                                                     -->
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.dtaus.spi.runtime.PropertyCurrencyDirectory"
                           jdtaus:name="jDTAUS Banking SPI"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.dtaus.spi.CurrencyDirectory"/>
      </jdtaus:implementedSpecifications>
      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="Logger"
                           jdtaus:bound="true">
          
          <jdtaus:properties>
            <jdtaus:property jdtaus:name="name" 
                             jdtaus:type="java.lang.String"
                             jdtaus:value="org.jdtaus.banking.dtaus.spi.runtime.PropertyCurrencyDirectory"
                             jdtaus:api="true"/>
            
          </jdtaus:properties>
        </jdtaus:dependency>
      </jdtaus:dependencies>
      <jdtaus:properties>
        <jdtaus:property jdtaus:name="propertiesResource"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="META-INF/jdtaus/currencies.properties"/>
        
      </jdtaus:properties>
    </jdtaus:implementation>
    
    <!--                                                                     -->
    <!-- DefaultPhysicalFileFactory                                          -->
    <!--                                                                     -->
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.dtaus.spi.runtime.DefaultPhysicalFileFactory"
                           jdtaus:name="${pom.name}"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.dtaus.PhysicalFileFactory"/>
      </jdtaus:implementedSpecifications>
      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.io.spi.StructuredFileOperations"
                           jdtaus:implementationName="StructuredFileOperations"
                           jdtaus:name="DiskStructuredFileOperations"
                           jdtaus:bound="false">
          
          <jdtaus:properties>
            <jdtaus:property jdtaus:name="blockSize"
                             jdtaus:type="int"
                             jdtaus:value="128"/>
            
            <jdtaus:property jdtaus:name="readAhead"
                             jdtaus:type="int"
                             jdtaus:value="6"/>
            
            <jdtaus:property jdtaus:name="minBufferedBlocks"
                             jdtaus:type="int"
                             jdtaus:value="1024"/>
            
          </jdtaus:properties>
        </jdtaus:dependency>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.io.spi.StructuredFileOperations"
                           jdtaus:implementationName="StructuredFileOperations"
                           jdtaus:name="TapeStructuredFileOperations"
                           jdtaus:bound="false">
          
          <jdtaus:properties>
            <jdtaus:property jdtaus:name="blockSize"
                             jdtaus:type="int"
                             jdtaus:value="150"/>
            
            <jdtaus:property jdtaus:name="readAhead"
                             jdtaus:type="int"
                             jdtaus:value="4"/>
            
            <jdtaus:property jdtaus:name="minBufferedBlocks"
                             jdtaus:type="int"
                             jdtaus:value="1024"/>
            
          </jdtaus:properties>
        </jdtaus:dependency>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="Logger"
                           jdtaus:bound="true">
          
          <jdtaus:properties>
            <jdtaus:property jdtaus:name="name" 
                             jdtaus:type="java.lang.String"
                             jdtaus:value="org.jdtaus.banking.dtaus.spi.runtime.DefaultPhysicalFileFactory"
                             jdtaus:api="true"/>
            
          </jdtaus:properties>
        </jdtaus:dependency>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.text.spi.ApplicationLogger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="ApplicationLogger"
                           jdtaus:bound="true"/>
        
      </jdtaus:dependencies>
      <jdtaus:properties>
        <jdtaus:property jdtaus:name="defaultFormat"
                         jdtaus:type="int"
                         jdtaus:value="128"/>
        
      </jdtaus:properties>
    </jdtaus:implementation>
    
    <!--                                                                     -->
    <!-- DefaultPhysicalFile                                                 -->
    <!--                                                                     -->
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.dtaus.spi.runtime.DefaultPhysicalFile"
                           jdtaus:name="${pom.name}"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.dtaus.PhysicalFile"/>
      </jdtaus:implementedSpecifications>
      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.monitor.spi.TaskMonitor"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="TaskMonitor"
                           jdtaus:bound="true"/>
        
      </jdtaus:dependencies>
    </jdtaus:implementation>
    
    <!--                                                                     -->
    <!-- DTAUSDisk                                                           -->
    <!--                                                                     -->
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.dtaus.spi.runtime.DTAUSDisk"
                           jdtaus:name="${pom.name} - Disk"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.dtaus.LogicalFile"/>
      </jdtaus:implementedSpecifications>
      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="Logger"
                           jdtaus:bound="true">
          
          <jdtaus:properties>
            <jdtaus:property jdtaus:name="name" 
                             jdtaus:type="java.lang.String"
                             jdtaus:value="org.jdtaus.banking.dtaus.spi.runtime.DTAUSDisk"
                             jdtaus:api="true"/>
            
          </jdtaus:properties>
        </jdtaus:dependency>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="MemoryManager"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.text.spi.ApplicationLogger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="ApplicationLogger"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.monitor.spi.TaskMonitor"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="TaskMonitor"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.banking.TextschluesselVerzeichnis"
                           jdtaus:implementationName="jDTAUS Banking SPI"
                           jdtaus:name="TextschluesselVerzeichnis"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.banking.dtaus.spi.CurrencyDirectory"
                           jdtaus:implementationName="jDTAUS Banking SPI"
                           jdtaus:name="CurrencyDirectory"
                           jdtaus:bound="true"/>
        
      </jdtaus:dependencies>
    </jdtaus:implementation>
    
    <!--                                                                     -->
    <!-- DTAUSTape                                                           -->
    <!--                                                                     -->
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.dtaus.spi.runtime.DTAUSTape"
                           jdtaus:name="${pom.name} - Tape"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.dtaus.LogicalFile"/>
      </jdtaus:implementedSpecifications>
      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="Logger"
                           jdtaus:bound="true">
          
          <jdtaus:properties>
            <jdtaus:property jdtaus:name="name" 
                             jdtaus:type="java.lang.String"
                             jdtaus:value="org.jdtaus.banking.dtaus.spi.runtime.DTAUSTape"
                             jdtaus:api="true"/>
            
          </jdtaus:properties>
        </jdtaus:dependency>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.lang.spi.MemoryManager"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="MemoryManager"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.text.spi.ApplicationLogger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="ApplicationLogger"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.monitor.spi.TaskMonitor"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="TaskMonitor"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.banking.TextschluesselVerzeichnis"
                           jdtaus:implementationName="jDTAUS Banking SPI"
                           jdtaus:name="TextschluesselVerzeichnis"
                           jdtaus:bound="true"/>
        
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.banking.dtaus.spi.CurrencyDirectory"
                           jdtaus:implementationName="jDTAUS Banking SPI"
                           jdtaus:name="CurrencyDirectory"
                           jdtaus:bound="true"/>
        
      </jdtaus:dependencies>
    </jdtaus:implementation>
  </jdtaus:implementations>
</jdtaus:module>
