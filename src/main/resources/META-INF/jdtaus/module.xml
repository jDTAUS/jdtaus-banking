<jdtaus:module xmlns="http://jdtaus.org/runtime/container/xml"
               xmlns:jdtaus="http://jdtaus.org/runtime/container/xml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://jdtaus.org/runtime/container/xml http://sites.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-client-container/jdtaus-module-1.1.xsd"
               jdtaus:name="${pom.name}"
               jdtaus:description="${pom.description}"
               jdtaus:version="1.1">

  <jdtaus:specifications>
    <jdtaus:specification jdtaus:identifier="org.jdtaus.banking.ri.blzdirectory.BankfileProvider"
                          jdtaus:description="${pom.description}"
                          jdtaus:vendor="${pom.organization.name}"
                          jdtaus:version="${pom.version}"
                          jdtaus:singleton="true"
                          jdtaus:multiplicity="many"/>

  </jdtaus:specifications>

  <jdtaus:implementations>
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.ri.blzdirectory.BundesbankBankleitzahlenVerzeichnis"
                           jdtaus:name="jDTAUS Banking SPI"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}"
                           jdtaus:final="true">

      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.BankleitzahlenVerzeichnis"/>
      </jdtaus:implementedSpecifications>

      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                           jdtaus:name="Logger"
                           jdtaus:bound="true">

          <jdtaus:properties>
            <jdtaus:property jdtaus:name="name"
                             jdtaus:type="java.lang.String"
                             jdtaus:value="org.jdtaus.banking.ri.blzdirectory.BundesbankBankleitzahlenVerzeichnis"
                             jdtaus:api="true"/>

          </jdtaus:properties>

        </jdtaus:dependency>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.text.spi.ApplicationLogger"
                           jdtaus:name="ApplicationLogger"
                           jdtaus:bound="true"/>

        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.monitor.spi.TaskMonitor"
                           jdtaus:name="TaskMonitor"
                           jdtaus:bound="true"/>

      </jdtaus:dependencies>

      <jdtaus:properties>
        <jdtaus:property jdtaus:name="dateOfExpirationText"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="2008-09-07"/>

        <jdtaus:property jdtaus:name="dateOfExpirationPattern"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="yyyy-MM-dd"/>

      </jdtaus:properties>
    </jdtaus:implementation>

    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.ri.blzdirectory.PropertyBankfileProvider"
                           jdtaus:name="jDTAUS Banking SPI"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}"
                           jdtaus:final="true">

      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.ri.blzdirectory.BankfileProvider"/>
      </jdtaus:implementedSpecifications>
      <jdtaus:properties>
        <jdtaus:property jdtaus:name="dataDirectory"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="META-INF/jdtaus"/>

        <jdtaus:property jdtaus:name="configuration"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="META-INF/jdtaus/BundesbankBankleitzahlenVerzeichnis.properties"/>

      </jdtaus:properties>
    </jdtaus:implementation>
  </jdtaus:implementations>
</jdtaus:module>
