<jdtaus:module xmlns="http://jdtaus.org/runtime/container/xml"
               xmlns:jdtaus="http://jdtaus.org/runtime/container/xml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://jdtaus.org/runtime/container/xml http://sites.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-client-container/jdtaus-module.xsd"
               jdtaus:name="${pom.name}"
               jdtaus:description="${pom.description}"
               jdtaus:version="1.0">

  <jdtaus:implementations>
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.ri.blzdirectory.BundesbankBankleitzahlenVerzeichnis"
                           jdtaus:name="jDTAUS Banking SPI"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}">
      
      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.BankleitzahlenVerzeichnis"/>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.spi.BankleitzahlenDatei"/>
      </jdtaus:implementedSpecifications>
      
      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="Logger"
                           jdtaus:bound="true">
          
          <jdtaus:properties>
            <jdtaus:property jdtaus:name="name" 
                             jdtaus:type="java.lang.String"
                             jdtaus:value="org.jdtaus.banking.ri.blzdirectory.BundesbankBankleitzahlenVerzeichnis"
                             jdtaus:api="true"/>
            
          </jdtaus:properties>
          
        </jdtaus:dependency>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.monitor.spi.TaskMonitor"
                           jdtaus:implementationName="jDTAUS Core SPI"
                           jdtaus:name="TaskMonitor"
                           jdtaus:bound="true">
          
        </jdtaus:dependency>
      </jdtaus:dependencies>
      
      <jdtaus:properties>
        <jdtaus:property jdtaus:name="encoding"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="ISO-8859-1"/>
        
        <jdtaus:property jdtaus:name="dataDirectory"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="META-INF/jdtaus"/>
        
        <jdtaus:property jdtaus:name="configuration"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="META-INF/jdtaus/BundesbankBankleitzahlenVerzeichnis.properties"/>
        
      </jdtaus:properties>
    </jdtaus:implementation>
  </jdtaus:implementations>
</jdtaus:module>
