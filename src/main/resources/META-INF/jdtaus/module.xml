<jdtaus:module xmlns="http://jdtaus.org/runtime/container/xml"
               xmlns:jdtaus="http://jdtaus.org/runtime/container/xml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://jdtaus.org/runtime/container/xml http://sites.jdtaus.org/jdtaus-core/1.0.x/jdtaus-core-client-container/jdtaus-module-1.1.xsd"
               jdtaus:name="${pom.name}"
               jdtaus:description="${pom.description}"
               jdtaus:version="1.1">

  <jdtaus:specifications>
    <jdtaus:specification jdtaus:identifier="org.jdtaus.banking.ri.txtdirectory.TextschluesselProvider"
                          jdtaus:description="${pom.description}"
                          jdtaus:vendor="${pom.organization.name}"
                          jdtaus:version="${pom.version}"
                          jdtaus:singleton="true"
                          jdtaus:multiplicity="many"/>

  </jdtaus:specifications>

  <jdtaus:implementations>
    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.ri.txtdirectory.XMLTextschluesselVerzeichnis"
                           jdtaus:name="jDTAUS Banking SPI"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}"
                           jdtaus:final="true">

      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.TextschluesselVerzeichnis"/>
      </jdtaus:implementedSpecifications>

      <jdtaus:dependencies>
        <jdtaus:dependency jdtaus:specificationIdentifier="org.jdtaus.core.logging.spi.Logger"
                           jdtaus:name="Logger"
                           jdtaus:bound="true">

          <jdtaus:properties>
            <jdtaus:property jdtaus:name="name"
                             jdtaus:type="java.lang.String"
                             jdtaus:value="org.jdtaus.banking.ri.txtdirectory.XMLTextschluesselVerzeichnis"
                             jdtaus:api="true"/>

          </jdtaus:properties>
        </jdtaus:dependency>
      </jdtaus:dependencies>

      <jdtaus:properties>
        <jdtaus:property jdtaus:name="reloadIntervalMillis"
                         jdtaus:type="long"
                         jdtaus:value="500"/>

      </jdtaus:properties>
    </jdtaus:implementation>

    <jdtaus:implementation jdtaus:identifier="org.jdtaus.banking.ri.txtdirectory.ClasspathTextschluesselProvider"
                           jdtaus:name="${pom.name}"
                           jdtaus:vendor="${pom.organization.name}"
                           jdtaus:version="${pom.version}"
                           jdtaus:final="true">

      <jdtaus:implementedSpecifications>
        <jdtaus:implementedSpecification jdtaus:identifier="org.jdtaus.banking.ri.txtdirectory.TextschluesselProvider"/>
      </jdtaus:implementedSpecifications>

      <jdtaus:properties>
        <jdtaus:property jdtaus:name="directoryName"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="META-INF/jdtaus"/>

        <jdtaus:property jdtaus:name="resourceName"
                         jdtaus:type="java.lang.String"
                         jdtaus:value="textschluessel.xml"/>

      </jdtaus:properties>
    </jdtaus:implementation>

  </jdtaus:implementations>
</jdtaus:module>
